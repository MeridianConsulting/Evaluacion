# ===========================================
# .htaccess para React App (Frontend)
# ===========================================

# Habilitar mod_rewrite
RewriteEngine On

# Configuración de seguridad básica
# ===========================================

# Ocultar información del servidor
ServerTokens Prod
ServerSignature Off

# Prevenir acceso a archivos sensibles
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|sql|conf)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Proteger archivos de configuración
<Files "package.json">
    Order Allow,Deny
    Deny from all
</Files>

<Files "package-lock.json">
    Order Allow,Deny
    Deny from all
</Files>

# Proteger directorio node_modules
<Directory "node_modules">
    Order Allow,Deny
    Deny from all
</Directory>

# Configuración de caché
# ===========================================

# Cache para archivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imágenes
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # CSS y JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fuentes
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML (no cachear para desarrollo)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Headers de caché
<IfModule mod_headers.c>
    # Cache para archivos estáticos
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    
    # No cachear HTML
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# Compresión GZIP
# ===========================================
<IfModule mod_deflate.c>
    # Comprimir archivos de texto
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    
    # Comprimir fuentes
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
    AddOutputFilterByType DEFLATE application/font-woff
    AddOutputFilterByType DEFLATE application/font-woff2
</IfModule>

# Configuración para React Router (SPA)
# ===========================================

# Redirigir todas las rutas a index.html para React Router
# Solo si el archivo o directorio no existe
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule . /index.html [L]

# Configuración de tipos MIME
# ===========================================
<IfModule mod_mime.c>
    # JavaScript
    AddType application/javascript .js
    AddType text/javascript .js
    
    # CSS
    AddType text/css .css
    
    # Fuentes web
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    
    # Imágenes
    AddType image/webp .webp
    AddType image/svg+xml .svg
    
    # JSON
    AddType application/json .json
</IfModule>

# Configuración de seguridad adicional
# ===========================================

# Prevenir hotlinking de imágenes
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?evaluacion\.meridianltda\.com [NC]
RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?meridianltda\.com [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp|svg)$ - [NC,F,L]

# Headers de seguridad
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always append X-Frame-Options SAMEORIGIN
    
    # Prevenir MIME type sniffing
    Header always set X-Content-Type-Options nosniff
    
    # Habilitar XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy básico (ajustar según necesidades)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:;"
    
    # Headers específicos para Google SEO
    Header always set X-Robots-Tag "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
    Header always set Cache-Control "public, max-age=31536000" "expr=%{REQUEST_URI} =~ m#\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$#"
</IfModule>

# Configuración de errores personalizados (opcional)
# ===========================================
# ErrorDocument 404 /index.html
# ErrorDocument 500 /index.html

# Configuración de directorio
# ===========================================
Options -Indexes
Options +FollowSymLinks

# Configuración de encoding
# ===========================================
AddDefaultCharset UTF-8

# Configuración de límites
# ===========================================
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Optimizaciones SEO adicionales
# ===========================================

# Redirección HTTPS (recomendado para SEO)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Forzar www (opcional - descomenta si quieres forzar con www)
# RewriteCond %{HTTP_HOST} !^www\.evaluacion\.meridianltda\.com [NC]
# RewriteRule ^(.*)$ https://www.evaluacion.meridianltda.com/$1 [L,R=301]

# Redirección www (opcional - descomenta si quieres forzar sin www)
# RewriteCond %{HTTP_HOST} ^www\.evaluacion\.meridianltda\.com [NC]
# RewriteRule ^(.*)$ https://evaluacion.meridianltda.com/$1 [L,R=301]

# Optimización de URLs para SEO
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^([^/]+)/?$ /index.html [L,QSA]

# Headers adicionales para SEO
<IfModule mod_headers.c>
    # Mejorar Core Web Vitals
    Header always set X-DNS-Prefetch-Control "on"
    
    # Optimización para móviles
    Header always set Vary "Accept-Encoding, User-Agent"
    
    # Información del servidor (opcional)
    Header always set X-Powered-By "Meridian Consulting LTDA"
</IfModule>

# Configuración de archivos específicos para SEO
<Files "robots.txt">
    Header set Content-Type "text/plain; charset=utf-8"
</Files>

<Files "sitemap.xml">
    Header set Content-Type "application/xml; charset=utf-8"
</Files>

# Optimización de imágenes para SEO
<IfModule mod_rewrite.c>
    # Redirección de imágenes faltantes
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} \.(jpg|jpeg|png|gif|webp|svg)$
    RewriteRule ^(.*)$ /logo192.png [L]
</IfModule>
